<html>

    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>New Savings Account</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="/bootstrap.min.css">
        <h1>Savings Account Creation Page</h1>
    </head>

    <body>
        <form action="/employee/savings_account" method="POST">

           
            
            <table class="table table-bordered">
                <thead>
                    <th scope="col">Select:</th>
                    <th scope="col">Plan Name</th>
                    <th scope="col">Interest Rate</th>
                    <th scope="col">Minimum Required Account Balance</th>
                </thead>
                
                <tbody>
                    <% if(level == 4) { %>
                    <% for(var i=0; i < plans.length; i++){ %>
                    <tr>
                        <td><input type="radio" name="savings_plan_id" id="savings_plan_id" value="<%= plans[i].savings_plan_id %>" required></td>

                        <td><input type="text" value="<%= plans[i].plan_name %>" readonly></td>

                        <td><input type="text" value="<%= plans[i].interest_rate %>" readonly></td>

                        <td><input type="text" name="minimum_balance" id="minimum_balance" value="<%= plans[i].minimum_required_balance %>" readonly></td>
                                
                    </tr>
                    <% } %>
                   <% }else{ %> 
                    <tr>
                        <td><input type="radio" name="savings_plan_id" id="savings_plan_id" value="<%= plans[2].savings_plan_id %>" checked required></td>

                        <td><input type="text" value="<%= plans[2].plan_name %>" readonly></td>

                        <td><input type="text" value="<%= plans[2].interest_rate %>" readonly></td>

                        <td><input type="text" name="minimum_balance" id="minimum_balance" value="<%= plans[2].minimum_required_balance %>" readonly></td>
                                
                    </tr>
                    <% } %> 
                </tbody>
            </table>

            
            <br>
            <br>

            Account ID: <%=id%>
            <br>

            Customer ID: <input type="text" id="customer_id" name="customer_id" value=<%=customer_id%> readonly required>
            <br>
            
            Date: <input type="date" id="started_date" name="started_date" max=<%=date%> required>
            <br>

            Deposit: <input type="number" id="bank_balance" name="bank_balance" min="document.getElementById('minimum_balance').value;" required>
            <br>

            Max Withdrawal Limit: <input type="text" id="max_withdrawal_limit" name="max_withdrawal_limit" required>
            <br>

            Source of Funds: <input type="text" id="source_of_funds" name="source_of_funds" required>
            <br>

            <input type="text" id="no_of_withdrawals_remaining" name="no_of_withdrawals_remaining" value='5' readonly hidden>
            <br>
            <input type="text" id="branch_id" name="branch_id" value=<%=branch_id%> hidden required>
            <br>

            <input type="submit">
        </form>

        <form action="/" method="GET">
            <input type="submit" value="Home">
        </form>
    </body>

</html>