<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title></title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="">
    </head>
    <body>
        <% const months = ['January','February','March','April','May','June','July','August','September','October','November','December']%>
        <h2>Late Loan Report for <%= months[parseInt(installments[0].due_month) -1] %> 
            of <%=installments[0].due_year%></h2>
        <% if (transactions.length>0) {%>
        <table>
            <thead>
                <th>Installment ID</th>
                <th>Loan ID</th>
                <th> Due Date</th>
                <th>Installment </th>
                <th>Remianing Installment</th>
                <th>Status</th>

            </thead>
            <tbody>
                <% for(var i=0; i<installments.length;i++) {%>
                <tr>
                    <td><%= installments[i].installment_id%></td>
                    <td><%= installments[i].loan_id%></td>
                    <td><%=(JSON.stringify(transactions[i].due_date)).toString().substr(1,10) %></td>
                    <td><%= installments[i].loan_installment%></td>
                    <td><%= installments[i].remaining_no_of_installments%></td>
                    <td><%= installments[i].status%></td>
                </tr>
                <%}%>
                </tbody>
            </table>
                <%} %>
    </body>
</html>